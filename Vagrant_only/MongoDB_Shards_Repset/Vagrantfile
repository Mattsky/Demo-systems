    shard3.vm.provision "shell", path: "init_shard.sh"
    shard3.vm.provision "file", source: "./prepset1.js", destination: "/root/prepset1.js"

    #Temp bugfix - running it twice sets up the replica set properly. Go figure.

    shard3.vm.provision "shell", inline: "mongo /root/prepset1.js"
    shard3.vm.provision "shell", inline: "mongo /root/prepset1.js"
  end

  config.vm.define "shard4" do |shard4|
