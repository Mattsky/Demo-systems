    end

    config2.vm.provision "file", source: "./repos/mongodb-org-3.0.repo", destination: "/etc/yum.repos.d/mongodb-org-3.0.repo"
    config2.vm.provision "shell", path: "hosts.sh"
    config2.vm.provision "shell", path: "install_mongo.sh"
